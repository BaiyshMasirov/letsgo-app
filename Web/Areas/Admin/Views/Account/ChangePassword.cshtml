@model ChangePasswordCommand

@{
    ViewData["Title"] = "Изменить пароль";
}

<div class="main-content-wrap d-flex flex-column">
    <div class="main-content">
        <div class="breadcrumb">
            <ul>
                <li><a asp-controller="Home" asp-action="Index">Главная</a></li>
                <li>@ViewData["Title"]</li>
            </ul>
        </div>
        <div class="separator-breadcrumb border-top"></div>
        <div class="col-md-10 mx-auto">
            <div class="card mb-4">
                <div class="card-body">
                    <div class="card-title mb-3">Изменить пароль</div>
                    <form asp-action="ChangePassword" method="post" autocomplete="off">
                        <div class="row">
                            <div class="col-md-12 form-group mb-3">
                                <label asp-for="@Model.OldPassword">Старый пароль</label>
                                <div class="input-group">
                                    <input type="password" asp-for="@Model.OldPassword" class="form-control" data-toggle="password">
                                    <div class="input-group-append">
                                        <span class="input-group-text"><i class="fa fa-eye"></i></span>
                                    </div>
                                </div>
                                <span asp-validation-for="@Model.OldPassword" class="text-danger"></span>
                            </div>
                            <div class="col-md-12 form-group mb-3">
                                <label asp-for="@Model.NewPassword">Новый пароль</label>
                                <div class="input-group">
                                    <input type="password" asp-for="@Model.NewPassword" class="form-control" data-toggle="password">
                                    <div class="input-group-append">
                                        <span class="input-group-text"><i class="fa fa-eye"></i></span>
                                    </div>
                                </div>
                                <span asp-validation-for="@Model.NewPassword" class="text-danger"></span>
                            </div>
                            <div class="col-md-12 form-group mb-3">
                                <label asp-for="@Model.ConfirmPassword">Подтверждение пароля</label>
                                <div class="input-group">
                                    <input type="password" asp-for="@Model.ConfirmPassword" class="form-control" data-toggle="password">
                                    <div class="input-group-append">
                                        <span class="input-group-text"><i class="fa fa-eye"></i></span>
                                    </div>
                                </div>
                                <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
                            </div>
                            <div class="col-md-12">
                                <button class="btn btn-primary" type="submit"><i class="i-Disk mr-1"></i>Сохранить</button>
                                <a asp-action="Index" asp-controller="Home" class="btn btn-secondary">Назад</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <environment names="Development,Staging,Production">
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.1.0/css/all.css" integrity="sha384-lKuwvrZot6UHsBSfcMvOkWwlCMgc0TaWr+30HWe3a4ltaBwTZhyTEggF5tJv8tbt" crossorigin="anonymous">
    </environment>
}
@section Scripts {
    <environment names="Development,Staging,Production">
        <partial name="_ValidationScriptsPartial" />
        <script src="~/js/bootstrap-show-password.min.js"></script>
        <script src="~/js/Common/btnSubmitHandler.js" asp-append-version="true"></script>
    </environment>
}