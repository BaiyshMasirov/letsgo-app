@model AdminDto

@{
    ViewData["Title"] = "Заблокировать пользователя";
}

<div class="main-content-wrap sidenav-open d-flex flex-column">
    <div class="main-content">
        <div class="breadcrumb">
            <ul>
                <li><a asp-controller="Home" asp-action="Index">Главная</a></li>
                <li><a asp-action="Index">Пользователи</a></li>
                <li>@ViewData["Title"]</li>
            </ul>
        </div>
        <div class="separator-breadcrumb border-top"></div>

        <div class="col-md-10 mx-auto">
            <div class="card mb-4">
                <div class="card-body">
                    <div class="tab-content">
                        <div class="tab-pane fade active show" id="details" role="tabpanel"
                             aria-labelledby="details-tab">

                            <partial name="_UserInformation" model="@Model" />

                            <form asp-action="Lock">
                                <input asp-for="@Model.Id" type="hidden">
                                <button class="btn btn-primary"><i class="i-Lock-User mr-1 "></i>Заблокировать</button>
                                <a asp-action="Index" class="btn btn-secondary">Назад</a>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>